<div class="text-center">
  <h2 class="form-title m-5">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:'form-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-box m-3' %>
    </div>

    <div class="field">
      <%= f.label :password, class:'form-label' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class:'form-box m-3' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class:'m-3' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:'m-2 form-btn btn-secondary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
