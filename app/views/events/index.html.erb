<div class="text-center">
  <h1 class="form-title m-4 text-white">Upcoming events</h1>
  <div class="text-center d-flex justify-content-center flex-wrap">
    <table>
      <tbody>
        <%@upcoming_events and @upcoming_events.each do |event| %>
            <div class="card text-dark bg-white mb-3">
              <div class="card-body bg-other">
                <p class="card-text text-white pb-5"><%= event.description %></p>
              </div>
              <div class="card-header bg-white p-1 d-block">
                  <h5><%= event.title %></h5>
                  <p><%= event.event_date %></p>
              </div>
              <div class="d-flex justify-content-center">
                <%= link_to 'Check Event', event, class:'btn btn-warning m-1' %>
                <%= show_registration_button(event) %>
              </div>
              <div class="card-footer text-white bg-dark">
                Created at <%= time_ago_in_words(event.created_at) %> ago
              </div>
            </div>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <br>
  <h1 class="form-title m-4 text-white">Past events</h1>
  <div class="text-center d-flex justify-content-center flex-wrap">
    <table>
      <tbody>
        <%@past_events and @past_events.each do |event| %>
            <div class="card text-dark bg-white mb-3">
              <div class="card-body bg-other">
                <p class="card-text text-white pb-5"><%= event.description %></p>
              </div>
              <div class="card-header bg-white p-1 d-block">
                  <h5><%= event.title %></h5>
                  <p><%= event.event_date %></p>
              </div>
              <div class="d-flex justify-content-center">
                <%= link_to 'Check Event', event, class:'btn btn-warning m-1' %>
              </div>
              <div class="card-footer text-white bg-dark">
                Created at <%= time_ago_in_words(event.created_at) %> ago
              </div>
            </div>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
